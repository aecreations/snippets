{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "2.0",
  "author": "AE Creations",
  "browser_specific_settings": {
    "gecko": {
      "id": "snippets@aecreations.github.io",
      "strict_min_version": "115.0"
    }
  },

  "icons": {
    "32": "img/icon.png"
  },

  "permissions": [
    "compose",
    "downloads",
    "menus",
    "storage",
    "unlimitedStorage"
  ],

  "optional_permissions": [
    "clipboardRead"
  ],

  "background": {
    "scripts": [
      "lib/dexie.min.js",
      "scripts/aeConst.js",
      "background.js"
    ]
  },

  "compose_action": {
    "default_title": "__MSG_extName__",
    "default_area": "maintoolbar"
  },

  "commands" : {
    "ae-snippets-window": {
      "suggested_key": {
	"default": "Ctrl+Shift+S",
	"mac": "Command+Shift+S"
      },
      "description": "__MSG_extName__"
    }
  },
  
  "options_ui": {
    "page": "pages/options.html"
  },
  
  "default_locale": "en"
}

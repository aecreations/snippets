{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "0.2+",
  "author": "AE Creations",
  "applications": {
    "gecko": {
      "id": "snippets@aecreations.github.io",
      "strict_min_version": "77.0b3"
    }
  },
  "icons": {
    "32": "img/icon32.png",
    "64": "img/icon64.png"
  },

  "permissions": [
    "compose",
    "downloads",
    "menus",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
    "scripts": [
      "lib/dexie.min.js",
      "lib/purify.min.js",
      "modules/aeConst.js",
      "background.js"
    ]
  },

  "compose_action": {
    "default_title": "Snippets",
    "default_area": "maintoolbar"
  },

  "commands" : {
    "ae-snippets-window": {
      "suggested_key": {
	"default": "Ctrl+Shift+S",
	"mac": "Command+Shift+S"
      },
      "description": "Snippets test command"
    }
  },

  "experiment_apis": {
    "aecreations": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "aecreations"
          ]
        ],
        "script": "implementation.js"
      }
    }
  },

  "default_locale": "en"
}

{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "0.4+",
  "author": "AE Creations",
  "browser_specific_settings": {
    "gecko": {
      "id": "snippets@aecreations.github.io",
      "strict_min_version": "78.0b4"
    }
  },

  "permissions": [
    "compose",
    "downloads",
    "menus",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],

  "background": {
    "scripts": [
      "lib/dexie.min.js",
      "lib/purify.min.js",
      "scripts/aeConst.js",
      "background.js"
    ]
  },

  "compose_action": {
    "default_title": "__MSG_extName__",
    "default_area": "maintoolbar"
  },

  "commands" : {
    "ae-snippets-window": {
      "suggested_key": {
	"default": "Ctrl+Shift+S",
	"mac": "Command+Shift+S"
      },
      "description": "Snippets test command"
    }
  },
  
  "options_ui": {
    "page": "pages/options.html"
  },
  
  "experiment_apis": {
    "aeSnippets": {
      "schema": "api/aeSnippets/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "aeSnippets"
          ]
        ],
        "script": "api/aeSnippets/implementation.js"
      }
    }
  },

  "default_locale": "en"
}
